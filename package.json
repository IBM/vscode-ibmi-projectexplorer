{
  "name": "vscode-ibm-projectmode",
  "displayName": "vscode-ibm-projectmode",
  "description": "Merlin extension example",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "HalcyonTechLtd.code-for-ibmi"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "projectExplorer",
          "name": "Project Explorer",
          "icon": "$(remote-explorer)"
        },
        {
          "id": "jobLog",
          "name": "Job Log",
          "icon": "$(book)"
        }
      ]
    },
    "colors": [
      {
        "id": "joblog.local",
        "description": "Color for local job log",
        "defaults": {
          "dark": "#FFA500",
          "light": "#FFA500"
        }
      },
      {
        "id": "joblog.severity.0",
        "description": "Color for job log severity 0 messages",
        "defaults": {
          "dark": "#87d167",
          "light": "#87d167"
        }
      },
      {
        "id": "joblog.severity.10",
        "description": "Color for job log severity 10 messages",
        "defaults": {
          "dark": "#b17cbc",
          "light": "#b17cbc"
        }
      },
      {
        "id": "joblog.severity.20",
        "description": "Color for job log severity 20 messages",
        "defaults": {
          "dark": "#6db5f8",
          "light": "#6db5f8"
        }
      },
      {
        "id": "joblog.severity.30",
        "description": "Color for job log severity 30 messages",
        "defaults": {
          "dark": "#eed329",
          "light": "#eed329"
        }
      },
      {
        "id": "joblog.severity.40",
        "description": "Color for job log severity 40 messages",
        "defaults": {
          "dark": "#FFA500",
          "light": "#FFA500"
        }
      },
      {
        "id": "joblog.severity.50",
        "description": "Color for job log severity 50 messages",
        "defaults": {
          "dark": "#ee816b",
          "light": "#ee816b"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "@types/lodash": "^4.14.178",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@halcyontech/vscode-ibmi-types": "^1.6.15",
    "dotenv": "^16.0.3",
    "lodash": "4.17.21"
  }
}
